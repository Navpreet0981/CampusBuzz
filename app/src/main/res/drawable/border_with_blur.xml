<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer (soft blur effect) -->
    <item>
        <shape>
            <solid android:color="#00FFFFFF" />
            <corners android:radius="12dp" />
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
        </shape>
    </item>

    <!-- Border Layer with soft gradient edge -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="90"
                android:startColor="#40CCCCCC"
                android:endColor="#00CCCCCC"
                android:centerX="0.5"
                android:centerY="0.5"/>
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main white background -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape>
            <solid android:color="#FFFFFFFF"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
